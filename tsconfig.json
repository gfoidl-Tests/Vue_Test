{
    "compilerOptions": {
        "baseUrl": ".",
        "paths"  : {
            "@/*"     : [ "src/ts/*" ],
            "@svc/*"  : [ "src/ts/services/*" ],
            "@cmp/*"  : [ "src/ts/components/*" ],
            "@views/*": [ "src/ts/views/*" ],
            "@img/*"  : [ "src/images/*" ]
        },

        "target"          : "ES2015",
        "module"          : "CommonJS",
        "moduleResolution": "Node",
        "lib"             : [ "DOM", "ES2015" ],
        "incremental"     : true,
        "declaration"     : true,
        "declarationMap"  : true,

        "removeComments"        : true,
        "importHelpers"         : true,
        "experimentalDecorators": true,
        "sourceMap"             : true,
        "newLine"               : "lf",

        "strict"                    : true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny"             : true,
        "noImplicitReturns"         : true,
        "noUnusedLocals"            : false,
        "noUnusedParameters"        : true
    }
}
