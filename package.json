{
    "name"       : "pwa-test",
    "version"    : "0.1.0",
    "description": "Test for PWA",
    "author"     : "gfoidl",
    "license"    : "(c) gfoidl, 2020",
    "private"    : true,
    "scripts": {
        "build"        : "webpack --mode=development",
        "build-watch"  : "webpack --mode=development --watch",
        "build-release": "webpack --mode=production",
        "build-analyze": "webpack --mode=production --analyze",
        "start"        : "webpack-dev-server --open --hot",
        "test-build"   : "tsc --build tests --verbose",
        "test"         : "alsatian out/tests/**/*.js",
        "test-results" : "alsatian out/tests/**/*.js --tap | tap-junit -o out/tests -n test-results.xml",
        "test-tdd"     : "yarn run test-build && yarn run test"
    },
    "dependencies": {
        "bootstrap-vue": "^2.13.0",
        "vue"          : "^2.6.11"
    },
    "devDependencies": {
        "alsatian"                          : "^3.2.1",
        "clean-webpack-plugin"              : "^3.0.0",
        "css-loader"                        : "^3.5.3",
        "file-loader"                       : "^6.0.0",
        "fork-ts-checker-webpack-plugin"    : "^4.1.3",
        "html-webpack-plugin"               : "^4.2.1",
        "less"                              : "^3.11.1",
        "less-loader"                       : "^6.0.0",
        "mini-css-extract-plugin"           : "^0.9.0",
        "module-alias"                      : "^2.2.2",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "style-loader"                      : "^1.0.0",
        "tap-junit"                         : "^3.1.2",
        "terser-webpack-plugin"             : "^2.1.2",
        "ts-loader"                         : "^7.0.1",
        "tslib"                             : "^1.11.1",
        "typescript"                        : "^3.8.3",
        "url-loader"                        : "^4.1.0",
        "vue-class-component"               : "^7.1.0",
        "vue-loader"                        : "^15.7.1",
        "vue-property-decorator"            : "^8.2.2",
        "vue-template-compiler"             : "^2.6.10",
        "webpack"                           : "^4.41.0",
        "webpack-cli"                       : "^3.3.11",
        "webpack-dev-server"                : "^3.8.1"
    },
    "_moduleAliases": {
        "@svc": "out/src/ts/services"
    }
}
